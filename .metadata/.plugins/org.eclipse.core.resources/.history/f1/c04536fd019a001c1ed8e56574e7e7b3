package com.javalec.base;

import java.util.Scanner;

import com.javalec.function.ConstDan;
import com.javalec.function.FieldDan;
import com.javalec.function.MethodDan;

public class Main {

	public static void main(String[] args) {
		Scanner scanner = new Scanner(System.in);
		System.out.print("몇 단을 출력할까요 ? : ");
		int dan = scanner.nextInt();
		
		FieldDan fieldDan = new FieldDan();
		fieldDan.dan = dan;
		fieldDan.printDan();
		String[] stringArr = fieldDan.returnArrDan();
		for(int i = 0; i < stringArr.length ; i++) {
			System.out.println(stringArr[i]);
		}
		
		MethodDan methodDan = new MethodDan();
		methodDan.printDan(dan);
		String[] methodArr = methodDan.returnArrDan(dan);
		for(int i = 0; i < methodArr.length ; i++) {
			System.out.println(methodArr[i]);
		}
		
		ConstDan constDan = new ConstDan(dan);
		constDan.printDan();
		
		String[] constArr = constDan.returnArrDan();
		for(int i = 0; i < constArr.length ; i++) {
			System.out.println(constArr[i]);
		}
	}

}

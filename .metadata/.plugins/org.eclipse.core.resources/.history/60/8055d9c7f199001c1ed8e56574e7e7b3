package com.javalec.function;

public class Add {
	//Field
	public int num1 = 0;
	public int num2 = 0;
	
	
	public Add() {
		//Constructor
	}
	
	public Add(int num1, int num2) {
		super();
		this.num1 = num1;
		this.num2 = num2;
	}

	public void addition() {
		System.out.println(num1 + " + " + num2 + " = " + (num1 + num2));
	}
	
	public void calcAction(int num1, int num2) {
		System.out.println(num1 + " + " + num2 + " = " + (num1 + num2));
		System.out.println(num1 + " - " + num2 + " = " + (num1 - num2));
		System.out.println(num1 + " X " + num2 + " = " + (num1 * num2));
		System.out.println(num1 + " / " + num2 + " = " + (num1 / num2));
	}
	
	public int addReturn() {
		return (num1 + num2);
	}
	
	public int subReturn() {
		return (num1 - num2);
	}
	
	public int multipleReturn() {
		return (num1 * num2);
	}
	
	public int divideReturn() {
		return (num1 / num2);
	}
}

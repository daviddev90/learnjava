package com.javalec.function;

public class ConstDan {

	int dan = 0;

	public ConstDan(int dan) {
		super();
		this.dan = dan;
	}
	
	public void printDan() {
		for(int i = 1; i <= 9; i++) {
			System.out.println("(Const) " + dan + " X " + i + " = " + (dan * i));
		}
	}
	
	public String[] returnArrDan() {
		String[] arr = new String[9];
		
		for(int i = 1; i <= 9; i++) {
			if(i % 2 == 0) {
				arr[i] = returnStar(i);
			}else {
				arr[i] = returnNormal(i);
			}
		}
		
		return arr;
	}
	
	private String returnNormal(int i) {
		return ("(ConstArr) " + dan + " X " + i + " = " + (dan * i));
	}
	
	private String returnStar(int i) {
		return ("(ConstArr) " + dan + " X * = " + (dan * i));
	}
	
	
}

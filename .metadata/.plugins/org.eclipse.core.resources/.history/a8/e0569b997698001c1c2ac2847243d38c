package com.javalec.base;

public class SumEvenOdd {
	//Field (Property)
	
	//Constructor
	public SumEvenOdd() {
		
	}
	
	//Method
	//합계를 구하는 Method
	public int sumCalc(int startNum, int endNum) {
		int sum = 0;
		for (int i = startNum; i<=endNum; i++) {
			sum += i;
		}
		return sum;
	}
	
	//홀짝을 판단하는 Method
	public String evenOrOdd(int num) {
		String str = "";
		int checkNum = num % 2;
		if(checkNum == 0) {
			str = "짝수";
		}else {
			str = "홀수";
		}
		return str;
	}
}

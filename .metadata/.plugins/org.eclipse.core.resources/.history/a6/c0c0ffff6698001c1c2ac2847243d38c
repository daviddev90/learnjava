package com.javalec.base;

import java.util.Scanner;

public class Quiz4 {
	public static void main(String[] args) {
		Scanner in = new Scanner(System.in);
		int[] arr = new int[5];
		
		while(true) {
			System.out.println("1. 입금");
			System.out.println("2. 출금");
			System.out.println("3. 현황");
			System.out.println("4. 종료");
			System.out.print("번호를 선택하세요!");
			
			int act = in.nextInt();
			
			if(act == 1) {
				System.out.print("고객번호 : ");
				int customer = in.nextInt();

				System.out.print("금액 : ");
				int amount = in.nextInt();
				arr[customer-1] += amount;
				
				System.out.println("입금 결과 : 고객번호 :" + customer + " 잔액 : " + arr[customer-1]);
				
				
			}else if(act == 2) {
				System.out.print("고객번호 : ");
				int customer = in.nextInt();

				System.out.print("금액 : ");
				int amount = in.nextInt();
				if(arr[customer-1] >= amount) {

					arr[customer-1] -= amount;
					
					System.out.println("입금 결과 : 고객번호 :" + customer + " 잔액 : " + arr[customer-1]);
				}else {
					System.out.println("잔액이 부족합니다!");
				}
				
			}else if(act ==3) {
				
				System.out.println("\t 고객명 \t 잔액");
				System.out.println("\t ____ \t ___");
				
				for(int i=0; i< arr.length; i++) {
					System.out.println((i+1) + "\t \t" + arr[i]);
				}
				
			}else if(act ==4) {
				System.out.println(">>>> Thank You <<<<");
				break;
			}else {
				System.out.println("1~4번을 눌러주세");
			}
		}
	}
	
	
}

package com.javalec.base;

import java.util.Scanner;

import com.javalec.function.MethodCalc;

public class Main {

	public static void main(String[] args) {
		// ---------------------------------//
		// 두 개의 정수를 입력받아 덧셈 기능 구현하기
		// ---------------------------------//
		
		Scanner scanner = new Scanner(System.in);
		int num1 = 0;
		int num2 = 0;
		
		//두 개의 수를 입력받기
		System.out.print("첫번째 수를 입력하세요 : ");
		num1 = scanner.nextInt();

		System.out.print("두번째 수를 입력하세요 : ");
		num2 = scanner.nextInt();
		
		//Case 1: Field 이용해 계산하기 (생략)		
		
		//Case 2: Field 없이 메소드를 이용해 계산하기
		MethodCalc methodCalc = new MethodCalc();
		String addResult = methodCalc.addResult(num1, num2);
		String substractResult = methodCalc.substractResult(num1, num2);
		String multipleResult = methodCalc.multipleResult(num1, num2);
		String divideResult = methodCalc.divideResult(num1, num2);
		System.out.println(addResult);
		System.out.println(substractResult);
		System.out.println(multipleResult);
		System.out.println(divideResult);
	}

}

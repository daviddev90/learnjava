package com.javalec.base;

import java.util.Calendar;

public class Main {

	public static void main(String[] args) {
		
		//생성자에 new가 없음에 유의
		Calendar calendar = Calendar.getInstance();
		//ctrl + space를 통해 선언해서 import java.util.Calendar 넣도록 하자

		int year = calendar.get(Calendar.YEAR); //20XX
		int month = calendar.get(Calendar.MONTH) + 1; // 0~11 > +1 해서 씀
		int day = calendar.get(Calendar.DAY_OF_MONTH); // 1~31

		System.out.println(year + '-' + month + '-' + day); //2022-2-28

		int hour = calendar.get(Calendar.HOUR_OF_DAY): // 0~23
		int minute = calendar.get(Calendar.MINUTE); //0~59
		int second = calendar.get(Calendar.SECOND); //0~59

		System.out.println(hour + '-' + minute + '-' + second); //16:36:24
		
	}
	
}

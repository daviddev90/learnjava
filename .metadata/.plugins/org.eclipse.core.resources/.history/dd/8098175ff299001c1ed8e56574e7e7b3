package com.javalec.function;

public class Add {
	//Field
	public int num1 = 0;
	public int num2 = 0;
	
	
	public Add() {
		//Constructor
	}
	
	public Add(int num1, int num2) {
		super();
		this.num1 = num1;
		this.num2 = num2;
	}
	
	public int addAction() {
		return (num1 + num2);
	}
	
	public int subAction() {
		return (num1 - num2);
	}

	public String addition() {
		return (num1 + " + " + num2 + " = " + addAction());
	}
	
	public String substraction() {
		return (num1 + " - " + num2 + " = " + subAction());
	}
	
	
}
